<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@android:color/holo_blue_light" >

    <LinearLayout
        android:id="@+id/ll_ensayo_con"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/tv_ens_titulo_con"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:paddingTop="15dp"
            android:text="@string/ens_con"
            android:textColor="@color/azul_1"
            android:textSize="21sp" />

        <TextView
            android:id="@+id/tv_ens_super_con"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="15dp"
            android:text="@string/texto"
            android:textColor="@color/azul_1"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_ens_numero_con"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/ens_numero" />

        <TextView
            android:id="@+id/et_ens_numero_con"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/texto"
            android:textSize="21sp" />

        <TextView
            android:id="@+id/tv_ens_descripcion_con"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/ens_descripcionsuelo" />

        <TextView
            android:id="@+id/et_ens_descripcion_con"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/texto"
            android:textSize="21sp" />

        <TextView
            android:id="@+id/tv_ens_fecha_con"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/ens_fecha" />

        <TextView
            android:id="@+id/dp_ens_fecha_con"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/texto"
            android:textSize="21sp" />

        <TextView
            android:id="@+id/tv_ens_norma_con"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/ens_norma" />

        <TextView
            android:id="@+id/dp_ens_norma_con"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/texto"
            android:textSize="21sp" />

        <Button
            android:id="@+id/bt_ens_consultar"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/per_add" />

        <Button
            android:id="@+id/bt_ens_anotar"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/ano_add" />

        <Button
            android:id="@+id/bt_ens_capturar"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/cap_add" />
    </LinearLayout>

</ScrollView>