<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@android:color/holo_blue_light" >

    <LinearLayout
        android:id="@+id/ll_proyecto_con"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/tv_pro_titulo_con"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="15dp"
            android:text="@string/pro_con"
            android:textColor="@color/azul_1"
            android:textSize="21sp" />

        <TextView
            android:id="@+id/tv_pro_nombre_con"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/pro_nombre" />

        <TextView
            android:id="@+id/tv_pro_nombre_pos_con"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/texto"
            android:textSize="21sp" />

        <TextView
            android:id="@+id/tv_pro_usu_cedula_fk_con"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/pro_usu_cedula_fk" />

        <TextView
            android:id="@+id/tv_pro_usu_cedula_fk_pos_con"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/texto"
            android:textSize="21sp" />

        <TextView
            android:id="@+id/tv_pro_localizacion_con"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/pro_localizacion" />

        <TextView
            android:id="@+id/et_pro_localizacion_con"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/texto"
            android:textSize="21sp" />

        <TextView
            android:id="@+id/tv_pro_fecha_con"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/pro_fecha" />

        <TextView
            android:id="@+id/dp_pro_fecha_con"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/texto"
            android:textSize="21sp" />

        <Button
            android:id="@+id/bt_puente_ensayo"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/ens_add" />
    </LinearLayout>

</ScrollView>