<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
	android:background="@drawable/fondow01" >

    <LinearLayout
        android:id="@+id/ll_usuario"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/tv_usu_titulo_cre"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="15dp"
            android:text="@string/usu_cre"
            android:textColor="@color/azul_1"
            android:textSize="21sp" />

        <TextView
            android:id="@+id/tv_usu_cedula_cre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/usu_cedula" />

        <EditText
            android:id="@+id/et_usu_cedula_cre"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="number" />

        <TextView
            android:id="@+id/tv_usu_nombre_cre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/usu_nombre" />

        <EditText
            android:id="@+id/et_usu_nombre_cre"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName" />

        <TextView
            android:id="@+id/tv_usu_apellido_cre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/usu_apellido" />

        <EditText
            android:id="@+id/et_usu_apellido_cre"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName" />

        <TextView
            android:id="@+id/tv_usu_foto_cre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/usu_foto" />

        <ImageButton
            android:id="@+id/bt_usu_foto_cre"
            android:layout_width="320dp"
            android:layout_height="240dp"
            android:layout_gravity="center"
            android:contentDescription="@string/usu_cre"
            android:scaleType="centerInside" />

        <TextView
            android:id="@+id/tv_usu_codigo_cre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/usu_codigo" />

        <EditText
            android:id="@+id/et_usu_codigo_cre"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName" />

        <TextView
            android:id="@+id/tv_usu_fechanacimiento_cre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/usu_fechanacimiento" />

        <DatePicker
            android:id="@+id/dp_usu_fechanacimiento_cre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center" />

        <TextView
            android:id="@+id/tv_usu_email_cre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/usu_email" />

        <EditText
            android:id="@+id/et_usu_email_cre"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textEmailAddress" />

        <TextView
            android:id="@+id/tv_usu_cel_cre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/usu_cel" />

        <EditText
            android:id="@+id/et_usu_cel_cre"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="phone" />

        <TextView
            android:id="@+id/tv_usu_tipo_cre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/usu_tipo" />

        <Spinner
            android:id="@+id/sp_usu_tipo_cre"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/bt_usu_crear"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/pue_crear" />
    </LinearLayout>

</ScrollView>