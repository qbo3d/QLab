<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@android:color/holo_blue_light" >

    <LinearLayout
        android:id="@+id/ll_m122_cre"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/tv_m122_titulo_cre"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:paddingTop="15dp"
            android:text="@string/n_122_cre"
            android:textColor="@color/azul_1"
            android:textSize="21sp" />

        <TextView
            android:id="@+id/tv_m122_super_cre"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="15dp"
            android:text="@string/texto"
            android:textColor="@color/azul_2"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_m122_numero_cre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/m122_numero" />

        <EditText
            android:id="@+id/et_m122_numero_cre"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName" />

        <TextView
            android:id="@+id/tv_m122_tipo_cre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/m122_tipo" />

        <TextView
            android:id="@+id/tv_m122_tipo2_cre"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/texto"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_m122_w1_cre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/m122_w1" />

        <EditText
            android:id="@+id/et_m122_w1_cre"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="numberDecimal" />

        <TextView
            android:id="@+id/tv_m122_w2_cre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/m122_w2" />

        <EditText
            android:id="@+id/et_m122_w2_cre"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="numberDecimal" />

        <TextView
            android:id="@+id/tv_m122_wc_cre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/m122_wc" />

        <EditText
            android:id="@+id/et_m122_wc_cre"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="numberDecimal" />

        <Button
            android:id="@+id/bt_m122_crear"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/pue_crear" />
    </LinearLayout>

</ScrollView>