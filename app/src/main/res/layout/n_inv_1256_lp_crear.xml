<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@android:color/holo_blue_light" >

    <LinearLayout
        android:id="@+id/ll_m1256_lp_cre"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/tv_m1256_lp_titulo_cre"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:paddingTop="15dp"
            android:text="@string/n_1256_lp_cre"
            android:textColor="@color/azul_0"
            android:textSize="21sp" />

        <TextView
            android:id="@+id/tv_m1256_lp_super_cre"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="15dp"
            android:text="@string/texto"
            android:textColor="@color/azul_1"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_m1256_lp_rn_cre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/m1256_lp_rn" />

        <EditText
            android:id="@+id/et_m1256_lp_rn_cre"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName" />

        <TextView
            android:id="@+id/tv_m1256_lp_pshr_cre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/m1256_lp_pshr" />

        <EditText
            android:id="@+id/et_m1256_lp_pshr_cre"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="numberDecimal" />

        <TextView
            android:id="@+id/tv_m1256_lp_pssr_cre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/m1256_lp_pssr" />

        <EditText
            android:id="@+id/et_m1256_lp_pssr_cre"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="numberDecimal" />

        <TextView
            android:id="@+id/tv_m1256_lp_pr_cre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/m1256_lp_pr" />

        <EditText
            android:id="@+id/et_m1256_lp_pr_cre"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="numberDecimal" />

        <Button
            android:id="@+id/bt_m1256_lp_crear"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/pue_crear" />
    </LinearLayout>

</ScrollView>